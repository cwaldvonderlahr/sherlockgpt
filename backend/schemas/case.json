{
  "name": "get_case",
  "description": "Generate a fresh case",
  "parameters": {
    "title": "Case",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Der Titel des Szenarios"
      },
      "short_description": {
        "type": "string",
        "description": "Eine kurze Beschreibung des Szenarios"
      },
      "victim": {
        "type": "string",
        "description": "Der Name des Opfers"
      },
      "location_description": {
        "type": "string",
        "description": "Beschreibung des Schauplatzes"
      },
      "suspects": {
        "type": "array",
        "description": "Liste der Verdächtigen",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Der Name des Verdächtigen"
            },
            "age": {
              "type": "integer",
              "description": "Das Alter des Verdächtigen"
            },
            "description": {
              "type": "string",
              "description": "Eine Beschreibung des Aussehens des Verdächtigen"
            },
            "personality": {
              "type": "string",
              "description": "Eine Beschreibung der Persönlichkeit des Verdächtigen"
            },
            "relationship": {
              "type": "string",
              "description": "Die Beziehung des Verdächtigen zum Opfer"
            }
          },
          "required": ["name", "age", "description", "personality", "relationship"]
        }
      },
      "plot": {
        "type": "string",
        "description": "Die Handlung des Szenarios"
      },
      "resolution": {
        "type": "string",
        "description": "Die Auflösung des Verbrechens"
      }
    },
    "required": ["title", "short_description", "victim", "location_description", "suspects", "plot", "resolution"]
  }
}